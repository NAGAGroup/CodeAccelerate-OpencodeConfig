{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",
  "plugin": ["opencode-mem"],
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=${EXA_API_KEY}",
      "enabled": false
    }
  },
  "default_agent": "tech_lead",
  "agent": {
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "todowrite": "allow",
        "todoread": "allow"
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "tech-lead-questions",
        "tech-lead-delegation",
        "tech-lead-tools",
        "todo-usage"
      ]
    },
    "tech_lead": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.7,
      "permission": {
        "*": "deny",
        "memory": "allow",
        "question": "allow",
        "read": {
          "*": "allow",
          "*.env": "ask",
          "*.env.*": "ask",
          "*.env.example": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "lsp": "allow",
        "edit": {
          "*": "deny",
          "*.md": "allow"
        },
        "write": {
          "*": "deny",
          "*.md": "allow"
        },
        "todowrite": "allow",
        "todoread": "allow",
        "todoplan": "allow",
        "task": "allow",
        "skill": {
          "*": "allow"
        },
        "external_directory": {
          "*": "ask"
        },
        "doom_loop": "ask",
        "mermaid_*": "allow"
      },
      "required_skills": [
        "skill-invocation-policy",
        "unicode-usage",
        "callout-boxes",
        "tech-lead-questions",
        "tech-lead-delegation",
        "tech-lead-memory-usage",
        "tech-lead-tools",
        "todo-usage"
      ]
    },
    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "glob": { "*": "allow" },
        "grep": { "*": "allow" },
        "lsp": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "explore-tool-patterns": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "explore-tool-patterns",
        "todo-usage"
      ]
    },
    "librarian": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.6,
      "permission": {
        "*": "deny",
        "webfetch": "allow",
        "websearch": "allow",
        "exa*": "allow",
        "context7*": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "github-exploration": "allow",
          "librarian-research-protocol": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "github-exploration",
        "librarian-research-protocol",
        "todo-usage"
      ]
    },
    "junior_dev": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.15,
      "permission": {
        "*": "deny",
        "bash": {
          "*": "deny",
          "cp *": "allow",
          "mv *": "allow",
          "ln *": "allow",
          "rm *": "allow"
        },
        "read": { "*": "allow" },
        "edit": { "*": "allow" },
        "write": { "*": "allow" },
        "grep": { "*": "allow" },
        "glob": { "*": "allow" },
        "lsp": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "context7*": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "junior_dev-execution-protocol": "allow",
          "junior_dev-research-policy": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "junior_dev-research-policy",
        "junior_dev-execution-protocol",
        "todo-usage"
      ]
    },
    "test_runner": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "grep": { "*": "allow" },
        "glob": { "*": "allow" },
        "bash": { "*": "allow" },
        "todowrite": "allow",
        "todoread": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "test_runner-execution-protocol": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "test_runner-execution-protocol",
        "todo-usage"
      ]
    },
    "general_runner": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "permission": {
        "*": "deny",
        "bash": {
          "*": "allow",
          "grep *": "deny",
          "egrep *": "deny",
          "fgrep *": "deny",
          "rg *": "deny",
          "ag *": "deny",
          "ack *": "deny",
          "find *": "deny",
          "locate *": "deny",
          "cat *": "deny",
          "head *": "deny",
          "tail *": "deny",
          "less *": "deny",
          "more *": "deny",
          "ls *": "deny",
          "tree *": "deny",
          "awk *": "deny",
          "sed *": "deny",
          "cp *": "deny",
          "mv *": "deny",
          "ln *": "deny",
          "rm *": "deny"
        },
        "read": { "*": "deny", "/tmp/*": "allow" },
        "glob": { "*": "deny", "/tmp/*": "allow" },
        "grep": { "*": "deny", "/tmp/*": "allow" },
        "todowrite": "allow",
        "todoread": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow"
        },
        "external_directory": {
          "*": "deny",
          "/tmp/*": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "general_runner-commands",
        "todo-usage"
      ]
    }
  }
}
