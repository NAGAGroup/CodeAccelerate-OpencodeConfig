{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "small_model": "github-copilot/gpt-5-mini",
  "plugin": ["opencode-mem"],
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey=${EXA_API_KEY}",
      "enabled": false
    }
  },
  "default_agent": "tech_lead",
  "agent": {
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "permission": {
        "todowrite": "allow",
        "todoread": "allow"
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "tech-lead-questions",
        "tech-lead-delegation",
        "todo-usage"
      ]
    },
    "tech_lead": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.7,
      "permission": {
        "*": "deny",
        "memory": "allow",
        "question": "allow",
        "read": {
          "*": "allow",
          "*.env": "ask",
          "*.env.*": "ask",
          "*.env.example": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "lsp": "allow",
        "edit": {
          "*": "deny",
          "*.md": "allow"
        },
        "write": {
          "*": "deny",
          "*.md": "allow"
        },
        "todowrite": "allow",
        "todoread": "allow",
        "todoplan": "allow",
        "task": "allow",
        "skill": {
          "*": "allow"
        },
        "external_directory": {
          "*": "ask"
        },
        "doom_loop": "ask",
        "mermaid_*": "allow",
        "skip_librarian": "allow",
        "skip_questions": "allow",
        "bash": {
          "*": "deny",
          "git *": "allow",
          "pixi add *": "allow",
          "pixi remove *": "allow",
          "pixi install *": "allow",
          "pixi update *": "allow",
          "pixi upgrade *": "allow",
          "pixi init *": "allow",
          "pixi list *": "allow",
          "pixi info *": "allow",
          "pixi search *": "allow",
          "pixi tree *": "allow",
          "pixi task add *": "allow",
          "pixi task remove *": "allow",
          "pixi task alias *": "allow",
          "pixi task list *": "allow",
          "npm install *": "allow",
          "npm init *": "allow",
          "npm create *": "allow",
          "yarn add *": "allow",
          "yarn install *": "allow",
          "pip install *": "allow",
          "cargo init *": "allow",
          "cargo add *": "allow",
          "go mod init *": "allow",
          "go get *": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "unicode-usage",
        "callout-boxes",
        "tech-lead-questions",
        "tech-lead-delegation",
        "tech-lead-memory-usage",
        "todo-usage"
      ]
    },
    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "glob": { "*": "allow" },
        "grep": { "*": "allow" },
        "lsp": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "bash": {
          "*": "deny",
          "git diff *": "allow",
          "git log *": "allow",
          "git show *": "allow",
          "git status *": "allow"
        },
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "explore-tool-patterns": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "explore-tool-patterns",
        "todo-usage"
      ]
    },
    "librarian": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.6,
      "permission": {
        "*": "deny",
        "webfetch": "allow",
        "websearch": "allow",
        "exa*": "allow",
        "context7*": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "bash": {
          "*": "deny",
          "gh pr *": "allow",
          "gh issue *": "allow",
          "gh repo view *": "allow",
          "gh api *": "allow",
          "git log *": "allow",
          "git show *": "allow",
          "git diff *": "allow",
          "git status *": "allow",
          "curl *": "allow",
          "jq *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "cat *": "allow",
          "grep *": "allow",
          "egrep *": "allow",
          "wc *": "allow",
          "less *": "allow"
        },
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "github-exploration": "allow",
          "librarian-research-protocol": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "github-exploration",
        "librarian-research-protocol",
        "todo-usage"
      ]
    },
    "junior_dev": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.15,
      "permission": {
        "*": "deny",
        "bash": {
          "*": "deny",
          "cp *": "allow",
          "mv *": "allow",
          "ln *": "allow",
          "rm *": "allow"
        },
        "read": { "*": "allow" },
        "edit": { "*": "allow" },
        "write": { "*": "allow" },
        "grep": { "*": "allow" },
        "glob": { "*": "allow" },
        "lsp": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "context7*": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "junior_dev-execution-protocol": "allow",
          "junior_dev-research-policy": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "junior_dev-research-policy",
        "junior_dev-execution-protocol",
        "todo-usage"
      ]
    },
    "test_runner": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "grep": { "*": "allow" },
        "glob": { "*": "allow" },
        "write": { "*": "deny", "/tmp/*": "allow" },
        "bash": {
          "*": "deny",
          "bash -c *": "allow",
          "sh -c *": "allow",
          "tee *": "allow",
          "pixi run *": "allow",
          "pixi exec *": "allow",
          "make": "allow",
          "make *": "allow",
          "cmake *": "allow",
          "npm run *": "allow",
          "npm test *": "allow",
          "yarn run *": "allow",
          "yarn test *": "allow",
          "pnpm run *": "allow",
          "pnpm test *": "allow",
          "pytest *": "allow",
          "python -m pytest *": "allow",
          "python -m unittest *": "allow",
          "tox *": "allow",
          "cargo build *": "allow",
          "cargo test *": "allow",
          "cargo check *": "allow",
          "cargo clippy *": "allow",
          "cargo bench *": "allow",
          "go build *": "allow",
          "go test *": "allow",
          "go vet *": "allow",
          "mvn *": "allow",
          "gradle *": "allow",
          "rake *": "allow",
          "rspec *": "allow",
          "bundle exec *": "allow",
          "cat *": "allow",
          "head *": "allow",
          "tail *": "allow",
          "less *": "allow",
          "more *": "allow",
          "grep *": "allow",
          "egrep *": "allow",
          "fgrep *": "allow",
          "rg *": "allow",
          "ack *": "allow",
          "ls *": "allow",
          "find *": "allow",
          "tree *": "allow",
          "git status *": "allow",
          "git log *": "allow",
          "git diff *": "allow",
          "git show *": "allow",
          "env": "allow",
          "printenv *": "allow",
          "echo *": "allow",
          "which *": "allow",
          "whereis *": "allow",
          "pwd": "allow",
          "whoami": "allow",
          "hostname": "allow",
          "uname *": "allow",
          "df *": "allow",
          "free *": "allow",
          "node --version": "allow",
          "npm --version": "allow",
          "python --version": "allow",
          "python3 --version": "allow",
          "cargo --version": "allow",
          "rustc --version": "allow",
          "go version": "allow",
          "java -version": "allow",
          "pixi --version": "allow",
          "npm list *": "allow",
          "pip list *": "allow",
          "pip freeze *": "allow",
          "cargo tree *": "allow",
          "pixi list *": "allow",
          "pixi info *": "allow",
          "docker ps *": "allow",
          "docker logs *": "allow",
          "docker-compose ps *": "allow",
          "docker-compose logs *": "allow"
        },
        "todowrite": "allow",
        "todoread": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "test_runner-execution-protocol": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "callout-boxes",
        "unicode-usage",
        "test_runner-execution-protocol",
        "todo-usage"
      ]
    }
  }
}
