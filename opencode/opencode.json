{
  "$schema": "https://opencode.ai/config.json",
  "small_model": "github-copilot/gpt-5-mini",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  },
  "default_agent": "tech_lead",
  "agent": {
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
     "build": {
        "model": "github-copilot/claude-sonnet-4.5",
        "required_skills": [
          "skill-invocation-policy",
          "unicode-usage",
          "callout-boxes",
          "tech-lead-questions",
          "tech-lead-tools",
          "tech-lead-delegation"
        ]
      },
    "tech_lead": {
      "mode": "primary",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.7,
      "permission": {
        "*": "deny",
        "question": "allow",
        "read": {
          "*": "allow",
          "*.env": "ask",
          "*.env.*": "ask",
          "*.env.example": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "bash": "ask",
        "lsp": "allow",
        "edit": {
          "*": "deny",
          "*.md": "allow"
        },
        "write": {
          "*": "deny",
          "*.md": "allow"
        },
        "todowrite": "allow",
        "todoread": "allow",
        "task": "allow",
        "skill": {
          "*": "allow"
        },
        "external_directory": {
          "*": "ask"
        },
        "doom_loop": "ask",
        "mermaid_*": "allow",
        "query_required_skills": "allow"
       },
        "required_skills": [
          "skill-invocation-policy",
          "unicode-usage",
          "callout-boxes",
          "todo-usage",
          "tech-lead-questions",
          "tech-lead-tools",
          "tech-lead-delegation"
        ]
     },
    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "glob": { "*": "allow" },
        "grep": { "*": "allow" },
        "lsp": "allow",
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "explore-tool-patterns": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "unicode-usage",
        "callout-boxes",
        "explore-tool-patterns"
      ]
    },
    "librarian": {
      "mode": "subagent",
      "model": "github-copilot/claude-sonnet-4.5",
      "temperature": 0.6,
      "permission": {
        "*": "deny",
        "webfetch": "allow",
        "context7": { "*": "allow" },
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "github-exploration": "allow",
          "librarian-research-protocol": "allow"
        }
      },
       "required_skills": [
        "skill-invocation-policy",
        "unicode-usage",
        "callout-boxes",
        "github-exploration",
        "librarian-research-protocol"
      ]
    },
     "junior_dev": {
       "mode": "subagent",
       "model": "github-copilot/claude-haiku-4.5",
       "temperature": 0.15,
       "permission": {
         "*": "deny",
         "read": { "*": "allow" },
         "edit": { "*": "allow" },
         "write": { "*": "allow" },
         "grep": { "*": "allow" },
         "glob": { "*": "allow" },
         "lsp": "allow",
         "todowrite": "allow",
         "todoread": "allow",
         "webfetch": "allow",
         "context7": { "*": "allow" },
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "todo-usage": "allow",
          "junior_dev-execution-protocol": "allow",
          "junior_dev-research-policy": "allow"
        }
       },
       "required_skills": [
         "skill-invocation-policy",
         "unicode-usage",
         "callout-boxes",
         "todo-usage",
         "junior_dev-execution-protocol",
         "junior_dev-research-policy"
       ]
     },
    "test_runner": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "temperature": 0.3,
      "permission": {
        "*": "deny",
        "read": { "*": "allow" },
        "grep": { "*": "allow" },
        "glob": { "*": "allow" },
        "bash": { "*": "allow" },
        "skill": {
          "*": "deny",
          "skill-invocation-policy": "allow",
          "unicode-usage": "allow",
          "callout-boxes": "allow",
          "test_runner-execution-protocol": "allow"
        }
      },
      "required_skills": [
        "skill-invocation-policy",
        "unicode-usage",
        "callout-boxes",
        "test_runner-execution-protocol"
      ]
    }
  }
}
